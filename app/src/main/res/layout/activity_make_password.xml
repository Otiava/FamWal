<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakePasswordActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="105dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Введите новый пароль:" />

    <EditText
        android:id="@+id/editTextNumberPassword3"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:background="@drawable/passwordfield"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="240dp"
        android:ems="5"
        android:maxLength="5"
        android:inputType="numberPassword" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Повторите пароль:" />

    <EditText
        android:id="@+id/editTextNumberPassword2"
        android:background="@drawable/passwordfield"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:ems="5"
        android:maxLength="5"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="400dp"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/button15"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:background="@drawable/swatch"
        android:text="Готово"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="490dp" />



</RelativeLayout>